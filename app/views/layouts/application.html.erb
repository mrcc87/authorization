<!DOCTYPE html>
<html>
  <head>
    <title>Authorization</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if (params[:controller] != 'devise/registrations' && params[:controller] != 'devise/sessions' && params[:controller] != 'devise/passwords') %>
      <%= render "layouts/menu" %>
    <% end %>
    <%= render "layouts/flash" %>
      <%= yield %>
  </body>
</html>
