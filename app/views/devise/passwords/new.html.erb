<div class="form-forgot-password-page-wrapper">
  <div class="text-center form-forgot-password">
    <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form-forgot-password") do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-heroku btn-block" %>
      </div>
    <% end %>
    <br>

    <%= render "devise/shared/links" %>

  </div>
</div>
